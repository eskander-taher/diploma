// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define user roles using an enum
enum UserRole {
  USER
  ADMIN
  MODERATOR
}

// Define the user schema
model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  role      UserRole
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Additional user-specific fields can be added as needed
  events    Event[]  @relation("EventAuthor")
  researches Research[] @relation("ResearchAuthor")
}

// Define the event schema
model Event {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  author    User     @relation("EventAuthor", fields: [authorId], references: [id])
  authorId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Define the research schema
model Research {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  author    User     @relation("ResearchAuthor", fields: [authorId], references: [id])
  authorId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}